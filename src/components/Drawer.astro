<!-- Drawer Init & Trigger -->
<div class="block md:hidden">
  <button 
    class="rounded-sm bg-transparent p-2 text-gray-700 hover:text-teal-600 focus:bg-gray-100 active:bg-gray-200 transition"
    type="button"
    data-drawer-target="drawer-right-example"
    data-drawer-show="drawer-right-example"
    data-drawer-placement="right"
    aria-controls="drawer-right-example"
    data-drawer-body-scrolling="true"
    data-drawer-backdrop="true"
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
</div>

<!-- Drawer Component -->
<div id="drawer-right-example" class="fixed top-0 right-0 z-40 w-55 max-w-full h-screen p-4 overflow-y-auto transition-transform translate-x-full backdrop-blur-sm bg-white/80" tabindex="-1" aria-labelledby="drawer-right-label">
  
  <h5 id="drawer-right-label" class="inline-flex items-center mb-4 text-base font-semibold text-gray-600">
    Menú lateral
  </h5>

  <!-- Close Button -->
  <button type="button" data-drawer-hide="drawer-right-example" aria-controls="drawer-right-example"
    class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 absolute top-2.5 end-2.5 inline-flex items-center justify-center focus:bg-gray-100 active:bg-gray-200 transition">
    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
    </svg>
    <span class="sr-only">Cerrar menú</span>
  </button>

  <!-- Contenido -->

  <div class="py-4 overflow-y-auto">
  <ul class="space-y-2 font-medium">
    <li>
      <a href="#" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 focus:bg-gray-100 active:bg-gray-200 transition">
        <span class="flex-1 ms-3 whitespace-nowrap">Sobre Nosotros</span>
      </a>
    </li>
    <li>
      <a href="#" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 focus:bg-gray-100 active:bg-gray-200 transition">
        <span class="flex-1 ms-3 whitespace-nowrap">Rutas</span>
      </a>
    </li>
    <li>
      <a href="#" class="flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 focus:bg-gray-100 active:bg-gray-200 transition">
        <span class="flex-1 ms-3 whitespace-nowrap">Eventos</span>
      </a>
    </li>
  </ul>
</div>

